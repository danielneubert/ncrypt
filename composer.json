{
    "name": "neubert/ncrypt",
    "description": "Secure PHP Encryption Made Simple",
    "keywords": [
        "encryption",
        "symmetric",
        "asymmetric",
        "aes",
        "chacha",
        "chacha20",
        "poly1305",
        "phpsec",
        "phpseclib",
        "rsa",
        "ecc",
        "ecdh",
        "ecies",
        "passphrase",
        "security",
        "secure"
    ],
    "license": "MIT",
    "support": {
        "issues": "https://github.com/danielneubert/ncrypt/issues",
        "source": "https://github.com/danielneubert/ncrypt"
    },
    "authors": [
        {
            "name": "Daniel Neubert",
            "email": "git@danielneubert.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "phpseclib/phpseclib": "^3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9"
    },
    "autoload": {
        "psr-4": {
            "Neubert\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Neubert\\Ncrypt\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        },
        "laravel2": {
            "providers": [
                "Neubert\\Ncrypt\\NcryptServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}